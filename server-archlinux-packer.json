{
    "variables": {
        "username": null,
        "publickey": null,
        "storage_account_name": null,
        "random_seed_for_oath": null,
        "password": null
    },
    "builders": [
        {
            "type": "qemu",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ],
                [ "-boot",  "menu=on,splash-time=10000" ]
            ],
            "output_directory": "./packer_output/qemu",
            "disk_size": "4000M",
            "format": "raw",
            "accelerator": "kvm",
            "iso_url": "https://mirror.puzzle.ch/archlinux/iso/latest/archlinux-2023.07.01-x86_64.iso",
            "iso_checksum": "sha256:1a2c1cdea0118b60525f55ee616e9cd4cf68fe17db906ce3d8e46fd06f9907eb",
            "headless": true,
            "firmware": "/usr/share/OVMF/x64/OVMF_CODE.fd",
            "cpus": 2,
            "disk_cache": "unsafe",
            "disk_discard": "unmap",
            "disk_compression": true,
            "http_directory": "http",
            "boot_wait": "20s",
            "boot_command": [
                "<enter><wait60><enter>",
                "curl -sfSLO http://{{ .HTTPIP }}:{{ .HTTPPort }}/packer.sh<enter><wait>",
                "chmod +x *.sh<enter>",
                "./packer.sh<enter>"
            ],
            "ssh_username": "root",
            "ssh_password": "root",
            "ssh_timeout": "20m",
            "shutdown_command": "sudo systemctl poweroff"
        }
    ],
    "provisioners": [
        {
  "type": "shell",
  "script": "./http/wait-for-keyring.sh"
},
        {
  "type": "shell",
  "inline": ["pacman -Sy --noconfirm archlinux-keyring && pacman -Sy --noconfirm ansible"]
},
        {
            "type": "ansible-local",
            "playbook_file": "playbooks/1_archlinux-server-install-playbook.yml",
            "extra_arguments": [ 
                "--extra-vars", "username={{user `username`}} password={{user `password`}} user_ssh_public_key={{user `publickey`}} random_seed={{user `random_seed_for_oath`}}", "-vvvv"
            ]
        }
    ]
}
