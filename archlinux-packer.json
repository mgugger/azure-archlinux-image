{
    "variables": {
        "username": null,
        "publickey": null,
        "storage_account_name": null
    },
    "builders": [
        {
            "type": "qemu",
            "qemuargs": [
                [
                    "-m",
                    "2048M"
                ]
            ],
            "output_directory": "./packer_output/qemu",
            "disk_size": "2500M",
            "format": "raw",
            "accelerator": "kvm",
            "iso_url": "https://mirror.puzzle.ch/archlinux/iso/2022.09.03/archlinux-x86_64.iso",
            "iso_checksum": "sha1:778b6399dff5955ef0666d4962da2a9c291b59cb",
            "headless": true,
            "disk_cache": "unsafe",
            "disk_discard": "unmap",
            "disk_compression": true,
            "http_directory": "http",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10><wait10><wait10><enter>",
                "curl -sfSLO http://{{ .HTTPIP }}:{{ .HTTPPort }}/packer.sh<enter><wait>",
                "chmod +x *.sh<enter>",
                "./packer.sh<enter>"
            ],
            "ssh_username": "root",
            "ssh_password": "root",
            "ssh_timeout": "20m",
            "shutdown_command": "sudo systemctl poweroff"
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "user": "root",
            "playbook_file": "playbooks/archlinux-install-playbook.yml",
            "extra_arguments": [ "--extra-vars", "username={{user `username`}} user_ssh_public_key={{user `publickey`}}" ]
        }
    ],
    "post-processors": [
        {
            "type": "shell-local",
            "inline": [
                "set -e; qemu-img convert -f raw -O vpc -o subformat=fixed,force_size ./packer_output/qemu/packer-qemu ./packer_output/archlinux.vhd",
                "azcopy login --identity",
                "azcopy copy ./packer_output/archlinux.vhd https://{{user `storage_account_name`}}.blob.core.windows.net/archlinux/"
            ]
        }
    ]
}